---
const { frontmatter, url, tagType } = Astro.props;

const Tag = tagType;

const { title, price, image, category } = frontmatter;

import { slugify } from "../js/utils";
---








    <div class="col-sm-3 g-my-10">
      <!-- Article -->
      <article class="h-100 text-center g-bg-white g-brd-around g-brd-gray-light-v4">
        <!-- Article Image -->
        <img class="d-block info-v5-2__image g-ml-minus-1" src={image.src} alt="Image Description">
        <!-- End Article Image -->

        <!-- Article Content -->
        <div class="text-center g-pa-20">
          <h3 class="h6 g-color-black g-font-weight-700 text-uppercase g-mb-15">
            <a class="u-link-v5 g-color-black g-color-primary--hover" href={url}>{title}</a>
          </h3>
          <span class="g-color-primary g-font-weight-700 g-font-size-16">{price}</span>
        </div>
        <!-- End Article Content -->
      </article>
      <!-- End Article -->
    </div>



  </div>