---
import LayoutHome from '../layouts/Layout.astro';
import Bestsellers from '../components/Bestsellers.astro';
import WhatsHappening from '../components/WhatsHappening.astro';
import Hours from '../components/Hours.astro';
import Showcase from '../components/Showcase.astro';
import Halloween from '../components/Halloween.astro';
import bg from '../img/bg.jpg';
---

<LayoutHome title="Welcome to Spellbound.">
    <Halloween />
    <Bestsellers />
    <WhatsHappening />
</LayoutHome>

<style>
  .auto-init{

    background-image:url('public/img/bg.jpg');
    background: linear-gradient(180deg, #000 0%, #4d0f8a 100%);

  }

  .auto-init {
            background-image:
            linear-gradient(180deg, #000, #4d0f8a), url('public/img/bg.jpg');
            width: 100%;
            height: 280px;
            text-align: center;
              color: #fff;
        }

  .card {
    border-radius: 20px;
    overflow: hidden;
    border: none;
    background-color: #fff;
    border: 1px solid rgba(0,0,0,.125);
  }

  .image-card {
      height: 200px;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      overflow: hidden
  }

  .image-card-1 {
      background-color: #18A4F7
  }

  .image-card-2 {
      background-color: #00D7D2
  }

  .image-card-3 {
      background-color: #FF75A0
  }

  .image-card img {
      height: 150px;
      width: 150px;
      object-fit: cover
  }

  .card-text {
      font-size: 13px
  }

  .card-body a {
      font-size: 12px
  }

  .about span {
      font-size: 12px
  }
</style>